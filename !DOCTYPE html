    <script>
        function calculate() {
            const people = parseFloat(document.getElementById('numPeople').value) || 0;
            const rate = parseFloat(document.getElementById('hourlyRate').value) || 0;
            const minutes = parseFloat(document.getElementById('duration').value) || 0;
            const frequency = parseFloat(document.getElementById('frequency').value) || 1;
            const travelCost = parseFloat(document.getElementById('travelCost').value) || 0;
            const prepTime = parseFloat(document.getElementById('prepTime').value) || 0;
            
            const meetingCost = (people * rate * minutes) / 60;
            const prepCost = (people * rate * prepTime) / 60;
            const totalTravelCost = people * travelCost;
            const totalPerMeeting = meetingCost + prepCost + totalTravelCost;
            const annualCost = totalPerMeeting * frequency;
            const hours = (minutes / 60).toFixed(2);
            
            let breakdownText = '<strong>Per Meeting:</strong> $' + totalPerMeeting.toFixed(2) + '<br>';
            breakdownText += 'Meeting: ' + people + ' people √ó $' + rate + '/hr √ó ' + hours + ' hrs = $' + meetingCost.toFixed(2) + '<br>';
            
            if (prepCost > 0) {
                const prepHours = (prepTime / 60).toFixed(2);
                breakdownText += 'Prep Time: ' + people + ' people √ó $' + rate + '/hr √ó ' + prepHours + ' hrs = $' + prepCost.toFixed(2) + '<br>';
            }
            
            if (totalTravelCost > 0) {
                breakdownText += 'Travel: ' + people + ' people √ó $' + travelCost + ' = $' + totalTravelCost.toFixed(2) + '<br>';
            }
            
            if (frequency > 1) {
                const freqText = document.getElementById('frequency').selectedOptions[0].text;
                breakdownText += '<br><strong>Annual Cost (' + freqText + '):</strong> $' + annualCost.toFixed(2);
            }
            
            if (frequency > 1) {
                document.getElementById('resultValue').textContent = '$' + annualCost.toFixed(2) + '/year';
            } else {
                document.getElementById('resultValue').textContent = '$' + totalPerMeeting.toFixed(2);
            }
            
            document.getElementById('breakdown').innerHTML = breakdownText;
            document.getElementById('result').classList.add('show');
        }
        
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                calculate();
            }
        });
        
        document.querySelectorAll('input, select').forEach(function(input) {
            input.addEventListener('input', calculate);
            input.addEventListener('change', calculate);
        });
        
        calculate();
        
        function showSection(section) {
            document.getElementById('calculator-section').style.display = 'none';
            document.getElementById('blog-section').style.display = 'none';
            document.getElementById('blog1').classList.remove('active');
            document.getElementById('blog2').classList.remove('active');
            document.getElementById('blog3').classList.remove('active');
            document.getElementById('about-section').classList.remove('active');
            document.getElementById('terms-section').classList.remove('active');
            
            if (section === 'calculator') {
                document.getElementById('calculator-section').style.display = 'block';
            } else if (section === 'blog') {
                document.getElementById('blog-section').style.display = 'block';
            } else if (section === 'about') {
                document.getElementById('about-section').classList.add('active');
            } else if (section === 'terms') {
                document.getElementById('terms-section').classList.add('active');
            }
            
            window.scrollTo(0, 0);
        }
        
        function showBlogPost(postId) {
            document.getElementById('blog-section').style.display = 'none';
            document.getElementById(postId).classList.add('active');
            window.scrollTo(0, 0);
        }
    </script>
